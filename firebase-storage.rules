rules_version = '2';

// Firebase Storage Security Rules for FOUNDIT App
service firebase.storage {
  match /b/{bucket}/o {
    // Posts images - authenticated users can upload and read
    match /posts/{allPaths=**} {
      allow read: if true; // Anyone can read post images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Profile images - users can only manage their own
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can read profile images
      allow write: if request.auth != null && request.auth.uid == userId; // Users can only upload their own profile images
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}